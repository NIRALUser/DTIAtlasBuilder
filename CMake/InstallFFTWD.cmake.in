# Configure Step
message("[] Configuring FFTWD...")
execute_process(COMMAND sh ${CMAKE_CURRENT_BINARY_DIR}/FFTW/configure --prefix=${CMAKE_CURRENT_BINARY_DIR}/FFTW-install --enable-static --enable-threads WORKING_DIRECTORY ${CMAKE_CURRENT_BINARY_DIR}/FFTW-build)

# Build Step
message("[] Building FFTWD...")
execute_process(COMMAND make WORKING_DIRECTORY ${CMAKE_CURRENT_BINARY_DIR}/FFTW-build)

# Install Step
message("[] Installing FFTWD...")
execute_process(COMMAND make install WORKING_DIRECTORY ${CMAKE_CURRENT_BINARY_DIR}/FFTW-build)
